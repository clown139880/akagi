<?xml version="1.0" encoding="UTF-8"?>
<urlset>
  <url>
    <loc>http://uniclown.com</loc>
    <changefreq>always</changefreq>
    <priority>1.0</priority>
  </url>
  <% @cases.each do |thecase| %>
  <url>
    <loc><%= Settings.visit_url + url_for([:blog, thecase]) %></loc>
    <priority>0.7</priority>
    <changefreq>hourly</changefreq>
    <lastmod><%= thecase.updated_at.strftime('%Y-%m-%d') %></lastmod>
  </url>
  <% end %>
  <% @posts.each do |post| %>
  <url>
    <loc><%= Settings.visit_url + url_for([:blog, post]) %></loc>
    <priority>0.5</priority>
    <changefreq>weekly</changefreq>
    <lastmod><%= post.updated_at.strftime('%Y-%m-%d') %></lastmod>
  </url>
  <% end %>
</urlset>

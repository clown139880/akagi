<article class="grid-item post tag-photography">
  <div class="post-inside">
    <div class="post-bg" style="background-image: url(<%= everycase.logo %>)"></div>
    <header class="post-header">
      <div class="post-tags">
        <% everycase.tag_list.each do |tag|  %>
          <%= link_to tag, [:blog, :posts, tag: tag] %>
        <% end %>
      </div>
      <h2 class="post-title">
        <%= link_to everycase.title, [:blog, everycase] %>
      </h2>
      <div class="post-meta">
        by
        <span class="post-author">
          <%= link_to everycase.get_username, [:blog, everycase] %>
        </span>
        on
        <time class="published"><%= format_datetime(everycase.updated_at) %></time>
      </div>
      <!-- .post-meta -->
    </header>
    <!-- .post-header -->
    <div class="read-more">
      <%= link_to 'Read More', [:blog, everycase], { class: "button light", title: everycase.title } %>
    </div>
  </div>
</article>

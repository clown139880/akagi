<% provide(:title, 'Burst Link') %>


<%= render 'blog/public/flash_notice' %>



<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <div class="login-box">
      <%= form_for(:session, url: blog_login_path) do |f|%>

        <%= f.label :email %>
        <%= f.email_field :email,class:"form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password,class:"form-control" %>

        <%= f.label :remember_me, class:"checkbox inline" do%>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
          <% end %>
        <%= f.submit "Link Start", class:"btn btn-primary" %>
      <% end %>


      <p>
        OR <%= link_to "Login with Weibo", "https://api.weibo.com/oauth2/authorize?client_id=2957192072&redirect_uri=http://uniclown.com/login/authorized" %>
      </p>
    </div>
  </div>
</div>

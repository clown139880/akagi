<% provide(:title,'增加条目')%>
<h1>
    增加新的条目
</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for (@event) do |f| %>
            <% render'shared/error_messages', object: f.object %>

            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>

            <%= f.label :body %>
            <%= f.text_area :body, class: 'form-control' %>

            <%= label :event ,:bangumi %>
            <%= text_field :info,:bangumi, class: 'form-control' %>

            <%= hidden_field_tag :father_id, params[:father_id] %>

            <%= f.submit "添加条目", class:"btn btn-primary" %>

        <% end %>

    </div>

</div>

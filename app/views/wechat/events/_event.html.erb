<section class="spotlight style1 orient-<%= (event_counter + 1) % 2 == 1 ? 'right' : 'left' %> content-align-left image-position-center onscroll-image-fade-in">
  <div class="content">
    <h2><%= event.title %></h2>
    <p><%= event.content[0..250] unless event.content.nil? %></p>
    <ul class="actions vertical">
      <li>
        <a href="/wechat/events/<%= event.id %>" class="button">More</a>
      </li>
    </ul>
  </div>
  <div class="image">
    <%= event_banner_for(event) %>
  </div>
</section>

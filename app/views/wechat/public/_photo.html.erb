<div class="weui-cells weui-cells_form">
  <div class="weui-cell">
    <div class="weui-cell__bd">
      <div class="weui-uploader">
        <div class="weui-uploader__hd">
          <p class="weui-uploader__title">Image</p>
        </div>
        <div class="weui-uploader__bd">
          <ul class="weui-uploader__files" id="uploaderFiles">
            <div class="img-preview">
            </div>

            <li>
              <div class="weui-uploader__input-box">
                <input id="qiniuimage" class="weui-uploader__input" type="file" accept="image/*"/>
              </div>
            </li>
          </ul>

        </div>
      </div>
    </div>
  </div>
</div>
<%= hidden_field_tag 'OSSAccessKeyId', @oss_uploader.access_key %>
<%= hidden_field_tag 'policy', @oss_uploader.policy %>
<%= hidden_field_tag 'Signature', @oss_uploader.signature %>
<%= hidden_field_tag 'key', @oss_uploader.key %>
<%= hidden_field_tag 'bucket_endpoint', @oss_uploader.bucket_endpoint %>
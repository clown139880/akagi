<%= render partial: 'cpanel/public/header', locals: { str: 'cases' } %>

<div class="container-fluid">
  <div class="row">
    <%= render partial: 'cpanel/public/sidebar' %>
    <div class="col-sm-9 col-md-10 main">
      <div class="main-hd">
        <h5>所有案件</h5>
      </div>
      <div class="main-hd">
        <%= render partial: 'cpanel/public/flash_notice', locals: { } %>
        <div class="tab-content">
          <div class="tab-pane active" id="all-order">
            <table class="table table-cmcm">
              <thead>
                <tr>
                  <th>名称</th>
                  <th>开始于</th>
                  <th>结束于</th>
                  <th>地点</th>
                  <th>状态</th>
                  <th>分类</th>
                  <th>操作</th>
                </tr>
              </thead>

              <tbody id="cases-body">
                <%= render partial: 'case', collection: @cases, as: :thecase, locals: { page: params[:page] } %>
              </tbody>

            </table>
            <ul class="pagination pull-right">
              <%= will_paginate @cases %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

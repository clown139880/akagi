<div class="main-bd">
  <%= render partial: 'cpanel/public/error', locals: { obj: thecase } %>
  <div class="form-box">
    <%= form_for [:cpanel, thecase], html: { class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <label class="col-sm-2 control-label">父级</label>
        <div class="col-sm-3">
          <%= f.select :parent_id, options_for_select(select_for_cases, thecase.parent_id),  {}, {class: "form-control"} %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">标题</label>
        <div class="col-sm-3">
          <%= f.text_field :title, value: thecase.title, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">标签</label>
        <div class="col-sm-3">
          <%= f.text_field :tag_list, 'data-role'=>'tagsinput', value: thecase.tag_list.join(',') %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">图片</label>
        <div class="img-preview"></div>
        <div id="photos" class="col-sm-10" >
          <% thecase.photos.each do |photo| %>
            <%= image_tag photo.image, class:"uploaded"  %>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div id="editormd">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control',style:"display:none;" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit '提交', class: 'btn btn-primary' %>
          <%= link_to '返回', [:cpanel, :cases], class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
    <%= render partial:"blog/public/photo" %>
  </div>
</div>

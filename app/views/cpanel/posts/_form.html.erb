<div class="main-bd">
  <%= render partial: 'cpanel/public/error', locals: { obj: post } %>
  <div class="form-box">
    <%= form_for [:cpanel, post], html: { class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <label class="col-sm-2 control-label">标题</label>
        <div class="col-sm-8">
          <%= f.text_field :title, value: post.title, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">事件</label>
        <div class="col-sm-3">
          <%= f.select :case_id, options_for_select(select_for_cases, post.case_id),  {}, {class: "form-control"} %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">标签</label>
        <div class="col-sm-8">
          <%= f.text_field :tag_list, 'data-role'=>'tagsinput', value: post.tag_list.join(',') %>
        </div>
      </div>
      <div class="form-group">
        <div id="editormd">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control',style:"display:none;" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit '提交', class: 'btn btn-primary' %>
          <%= link_to '返回', [:cpanel, :cases], class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
    <%= render partial:"blog/public/photo" %>
  </div>
</div>

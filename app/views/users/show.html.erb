<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user,size:200 %>
                <%= @user.name %>
            </h1>
        </section>
    </aside>
</div>


<p>
    <%= @user.name %>, <%= @user.email %>
</p>
<p>
    创建时间<%= @user.created_at %>
</p>
<p>
    更新时间<%= @user.updated_at %>
</p>
<p>
    当前时间<%= Time.now %>
</p>
